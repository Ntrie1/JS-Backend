

        <main>

            <section id="catalog">
                <h1>All posts</h1>
                    {{#if posts}}
                <div class="band">

                    {{#each posts}}
                    <!-- If there are posts for wildlife in the database display each of them -->
                    <div class="flip flip-vertical">
                        <div class="front">
                            <img src="{{image}}" alt="image_nature_1">
                            <h1 class="text-shadow">Keyword: {{keyword}}</h1>
                        </div>
                        <div class="back">
                            <h2>{{title}}</h2>
                            <p>Description: {{description}}</p>
                            <a href="/posts/{{_id}}/details" class="details">Details</a>
                        </div>
                    </div>
                    {{/each}}

                


                    <!-- If there are still no posts for wildlife in the database display: -->
                    {{else}}
                   <div class="no-posts">
                        <div class="no-posts-img">
                            <img src="/static/img/animal.jpg" alt="image_nature_3">
                        </div>
                        <p class="no-offer">There are no posts yet...</p>
                    </div>
                </div>
                    {{/if}}
            </section>
        </main>


   